{
    "comments": {
        "lineComment": "--",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*--\\s*#region\\b",
            "end": "^\\s*--\\s*#endregion\\b"
        }
    },
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
    "indentationRules": {
        "increaseIndentPattern": "^.*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
        "decreaseIndentPattern": "^\\s*[\\}\\]\\)]"
    }
}