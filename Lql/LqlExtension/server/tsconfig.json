{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "outDir": "out",
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}