{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dashboard (Fresh)",
            "type": "node-terminal",
            "request": "launch",
            "command": "${workspaceFolder}/Samples/start.sh --fresh",
            "cwd": "${workspaceFolder}/Samples"
        },
        {
            "name": "Dashboard (Continue)",
            "type": "node-terminal",
            "request": "launch",
            "command": "${workspaceFolder}/Samples/start.sh",
            "cwd": "${workspaceFolder}/Samples"
        },
        {
            "name": "Launch Blazor LQL Website",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "kill-lql-website-port",
            "program": "dotnet",
            "args": ["run", "--project", "Lql/LqlWebsite"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://\\S+)"
            }
        },
        {
            "name": "Run DataProvider.Example",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DataProvider/DataProvider.Example/bin/Debug/net9.0/DataProvider.Example.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DataProvider/DataProvider.Example",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run DataProvider.Example.FSharp",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DataProvider/DataProvider.Example.FSharp/bin/Debug/net9.0/DataProvider.Example.FSharp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DataProvider/DataProvider.Example.FSharp",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "DB Browser",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Lql/Lql.Browser/bin/Debug/net9.0/Lql.Browser.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Lql/Lql.Browser",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    ]
}